<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference
        android:key="enable_notification"
        android:defaultValue="true"
        android:title="@string/pref_title_enable_notification" />
    <ListPreference
        android:key="notification_style"
        android:defaultValue="pie"
        android:title="@string/pref_notification_style"
        android:dependency="enable_notification"
        android:entries="@array/pref_notification_styles"
        android:entryValues="@array/pref_notification_styles_values" />
</PreferenceScreen>
